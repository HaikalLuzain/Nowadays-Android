<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="false"
    android:isScrollContainer="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drag_handle_black_24dp"
        android:tint="@color/grey_300"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:focusable="true"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kegiatan"
                android:layout_marginBottom="20dp"
                app:hintAnimationEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:fontFamily="@font/font_product_sans"
                    android:inputType="textMultiLine"
                    android:maxLines="5"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mulai"
                        android:fontFamily="@font/product_sans_regular"
                        android:layout_marginRight="20dp"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:passwordToggleDrawable="@drawable/icon_passfield_selector"
                        android:layout_marginBottom="30dp"
                        app:hintEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--:--"
                            android:fontFamily="@font/font_product_sans"
                            android:background="@drawable/form_control"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:maxLines="1"
                            android:inputType="time"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:fontFamily="@font/product_sans_regular"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:passwordToggleDrawable="@drawable/icon_passfield_selector"
                        android:layout_marginBottom="30dp"
                        app:hintEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--:--"
                            android:background="@drawable/form_control"
                            android:fontFamily="@font/font_product_sans"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:maxLines="1"
                            android:inputType="time"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_custom_solid"
                android:backgroundTint="@color/blue_200"
                android:padding="15dp"
                android:text="Simpan Perubahan"
                android:textAllCaps="false"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/blue_800"
                android:fontFamily="@font/font_product_sans"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>