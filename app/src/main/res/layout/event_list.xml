<FrameLayout android:layout_width="match_parent"
    android:id="@+id/lv"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingVertical="10dp"
    android:longClickable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/dot_active"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/dot_shape"
            android:backgroundTint="@color/green_400"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/event_list_shape"
            android:backgroundTint="@color/blue_100"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kegiatan belajar mengajar minggu genap"
                android:fontFamily="@font/product_sans_bold"
                android:textSize="15dp"
                android:textColor="@color/blue_800"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_800"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 - 27 Juni"
                    android:layout_gravity="center"
                    android:fontFamily="@font/product_sans_bold"
                    android:textSize="14dp"
                    android:textColor="@color/blue_800"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>