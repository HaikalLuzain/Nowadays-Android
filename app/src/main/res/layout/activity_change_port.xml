<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTodayDialog"
    android:gravity="center"
    android:fitsSystemWindows="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ubah Port"
                    android:textColor="@color/grey_800"
                    android:fontFamily="@font/product_sans_bold"
                    android:textSize="20dp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        app:hintEnabled="false"
                        app:passwordToggleDrawable="@drawable/icon_passfield_selector">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/port"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/form_control"
                            android:fontFamily="@font/font_product_sans"
                            android:hint="--:--"
                            android:inputType="textMultiLine"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_custom_solid"
                    android:backgroundTint="@color/grey_200"
                    android:padding="15dp"
                    android:text="BATAL"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    style="?android:borderlessButtonStyle"
                    android:textColor="@color/grey_600"
                    android:fontFamily="@font/font_product_sans" />

                <Button
                    android:id="@+id/set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_custom_solid"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="SET PORT"
                    android:textAllCaps="false"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>