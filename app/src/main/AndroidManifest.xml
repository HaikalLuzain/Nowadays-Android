<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haikalfluzain.nowadays">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.ChangePort"
            android:theme="@style/ProfileDialog"></activity>
        <activity
            android:name=".activity.EditEvent"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.AddEvent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddTodayDialog"
            android:theme="@style/ProfileDialog" />
        <activity
            android:name=".activity.ProfileDialog"
            android:theme="@style/ProfileDialog" />
        <activity
            android:name=".activity.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Splash"
            android:theme="@style/SpalshScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Main"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>